{
  "source": [
    "tokens/primitives.json",
    "tokens/typography.json",
    "tokens/radius.json",
    "tokens/widths.json",
    "tokens/containers.json",
    "tokens/spacing.json",
    "tokens/modes/**/*.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "prefix": "vuboi"
          }
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "options": {
            "outputReferences": true,
            "prefix": "vuboi"
          }
        },
        {
          "destination": "_maps.scss",
          "format": "scss/map-deep",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "javascript": {
      "transforms": ["name/camel", "color/hex", "size/px"],
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "index.js",
          "format": "javascript/module",
          "options": {
            "outputReferences": true
          }
        },
        {
          "destination": "index.esm.js",
          "format": "javascript/esm",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "typescript": {
      "transforms": ["name/camel", "color/hex", "size/px"],
      "buildPath": "build/ts/",
      "files": [
        {
          "destination": "index.d.ts",
          "format": "typescript/es6-declarations",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "json": {
      "transforms": ["name/camel", "color/hex", "size/px"],
      "buildPath": "build/json/",
      "files": [
        {
          "destination": "tokens.json",
          "format": "json",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "flutter": {
      "transformGroup": "flutter",
      "buildPath": "build/flutter/",
      "files": [
        {
          "destination": "tokens.dart",
          "format": "flutter/class.dart",
          "options": {
            "outputReferences": true,
            "className": "VuboiTokens"
          }
        }
      ]
    },
    "compose": {
      "transformGroup": "compose",
      "buildPath": "build/android/",
      "files": [
        {
          "destination": "Theme.kt",
          "format": "compose/object",
          "options": {
            "outputReferences": true,
            "objectName": "VuboiTokens",
            "package": "com.vuboi.tokens"
          }
        }
      ]
    },
    "android": {
      "transformGroup": "android",
      "buildPath": "build/android/res/values/",
      "files": [
        {
          "destination": "tokens_colors.xml",
          "format": "android/colors",
          "options": {
            "outputReferences": true
          }
        },
        {
          "destination": "tokens_dimens.xml",
          "format": "android/dimens",
          "options": {
            "outputReferences": true
          }
        }
      ]
    },
    "ios": {
      "transformGroup": "ios",
      "buildPath": "build/ios/",
      "files": [
        {
          "destination": "VuboiTokens.swift",
          "format": "ios/macros",
          "options": {
            "outputReferences": true
          }
        }
      ]
    }
  }
}
